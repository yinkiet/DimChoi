<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_small"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        card_view:cardBackgroundColor="@color/bb_darkBackgroundColor"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="160dp">

            <ImageView
                android:id="@+id/image_menu_small"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                card_view:srcCompat="@color/bb_inActiveBottomBarItemColor" />

            <TextView
                android:id="@+id/menu_title_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_menu_small"
                android:layout_margin="5dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Restaurant ABC"
                android:textColor="@android:color/white"
                android:textSize="14sp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>